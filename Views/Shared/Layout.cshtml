@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Okul Tanıtım Sitesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header class="bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h3 m-0">Okul Tanıtım Sitesi</h1>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link text-white" href="/">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Home/Hakkımızda">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Home/Etkinlikler">Etkinlikler</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main class="container my-5">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-4 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Okul Tanıtım Sitesi. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
